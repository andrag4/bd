<Window x:Class="WpfApp1.Forms.AddForms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Forms"
        mc:Ignorable="d"
        Title="AddForms" Height="450" Width="800">
    <StackPanel>
        <UniformGrid Columns="2" Height="209">
            <TextBlock Text="SecondName"></TextBlock>
            <TextBox x:Name="SNameTB"></TextBox>
            <TextBlock Text="FirstName"></TextBlock>
            <TextBox x:Name="FNameTB"></TextBox>
            <TextBlock Text="Category"></TextBlock>
            <ComboBox x:Name="CategoryCB"></ComboBox>
            <TextBlock Text="Price"></TextBlock>
            <TextBox x:Name="PriceTB"></TextBox>
            <Button x:Name="AddOnFormButton">Add</Button>
            <Button x:Name="CancelButton">Cancel</Button>
        </UniformGrid>
        
    </StackPanel>
</Window>
