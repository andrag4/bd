<Window x:Class="WpfApp1.AddCategoryForms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddCategoryForms" Height="450" Width="800">
    <StackPanel>
        <UniformGrid>
            <TextBlock Text="CategoryName"></TextBlock>
            <TextBox x:Name="CategoryNameTB"></TextBox>
            <Button x:Name="AddCategory" Click="AddCategory_Click"></Button>
            <Button x:Name="CancelCategory" Click="CancelCategory_Click"/>
        </UniformGrid>
    </StackPanel>
    
</Window>
