<Window x:Class="WpfApp1.AddCruiseForms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="AddCruiseForms" Height="450" Width="800">
    <StackPanel>
        <UniformGrid Columns="2">
            <TextBlock Text="CruiseDate"></TextBlock>
            <DatePicker x:Name="CruiseDateDP"/>
            <TextBlock Text="SelectRoute"></TextBlock>
            <ComboBox x:Name="SelectRouteCB"></ComboBox>
            <Button x:Name="AddCruise" Click="AddCruise_Click"></Button>
            <Button x:Name="CancelCruise" Click="CancelCruise_Click"></Button>
        </UniformGrid>
    </StackPanel>
</Window>
